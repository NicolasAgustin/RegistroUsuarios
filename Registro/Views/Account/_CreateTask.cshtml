@model TareaDB
@using Registro.Models
@{
    ViewBag.Title = "TaskDetails";
}

<head>
    <link href="@Url.Content("~/Content/CreateTask.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CreateTaskForm.css")" rel="stylesheet" type="text/css" />
</head>

<div class="modal-content">
    <div class="modal-header">
        <div class="close-btn-wrapper">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <h4 class="create-title">Create new task</h4>
    </div>
    <div class="modal-body">
        <section id="contact">
            <div class="content">
                <div id="form">
                    @using (Html.BeginForm("CreateTask", "Account", FormMethod.Post, new { enctype = "multipart/form-data", id = "contactForm" }))
                    {
                        <span class="placeholder-form">Title</span>
                        <input type="text" name="title" class="name" placeholder="Task title" tabindex=1 />
                        <span class="placeholder-form">Task type</span>
                        @Html.DropDownList("type", new SelectList(ViewBag.tipos), "Select type", new { @class = "form-control", tabindex = 2 })
                        <span class="placeholder-form">Asignee</span>
                        @Html.DropDownList("asignee", new SelectList(ViewBag.data), "Select Asignee", new { @class = "form-control", tabindex = 2 })
                        <span class="placeholder-form">Description</span>
                        <textarea class="message" placeholder="Enter task description" tabindex=4 name="description"></textarea>
                        <span class="placeholder-form">Estimated time</span>
                        <input type="time" id="appt" name="TEstimated" min="00:00" max="99:99" value="00:00">
                        <span class="placeholder-form">Tracked time</span>
                        <input type="time" id="appt2" name="TTracked" min="00:00" max="99:99" value="00:00">
                        <input type="submit" name="submit" value="Create" class="submit" tabindex=5>
                    }
                </div>
            </div>
        </section>
    </div>
    @*<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>*@
</div>
