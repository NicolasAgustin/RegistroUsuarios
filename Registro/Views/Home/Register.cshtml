@{
    ViewBag.Title = "Register";
}
@*<h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>*@

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="go-btn">
        <button type="submit" class="btn">Back</button>
    </div>
}

<div class="box">
    @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <span class="text-center">Register</span>
        <div class="input-container">
            <input type="text" required="" name="nombre" />
            <label>Name</label>
        </div>

        <div class="input-container">
            <input type="text" required="" name="apellido" />
            <label>Last Name</label>
        </div>

        <div class="input-container">
            <input type="date" required="" name="edad" />
            <label>Date</label>
        </div>

        <div class="input-container">
            <input type="email" required="" />
            <label>Email</label>
        </div>

        <div class="input-container">
            <input type="password" required="" name="password" />
            <label>Password</label>
        </div>

        <div class="go-btn">
            <div class="file-input">
                <input type="file" id="file" class="file" name="photo" required>
                <label for="file">Upload profile picture</label>
            </div>
        </div>

        <div class="go-btn">
            <button type="submit" class="btn">Go!</button>
        </div>
    }
</div>
